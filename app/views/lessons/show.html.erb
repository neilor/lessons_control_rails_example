<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @lesson.title %>
</p>

<p>
  <strong>Number:</strong>
  <%= @lesson.number %>
</p>

<p>
  <strong>Description:</strong>
  <%= @lesson.description %>
</p>

<p>
  <strong>Value:</strong>
  <%= @lesson.value %>
</p>

<p>
  <strong>Students:</strong>
  <ul>
    <% @lesson.students.each do |student| %>
      <li><%= "#{student.name} - Age: #{student.age} - Level: #{student.level}" %></li>
    <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_lesson_path(@lesson) %> |
<%= link_to 'Back', lessons_path %>
