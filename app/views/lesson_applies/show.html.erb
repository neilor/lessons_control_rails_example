<%- model_class = LessonApply -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:student_id) %>:</strong></dt>
  <dd><%= @lesson_apply.student.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lesson_id) %>:</strong></dt>
  <dd><%= @lesson_apply.lesson.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:created_at) %>:</strong></dt>
  <dd><%= @lesson_apply.created_at %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              lesson_applies_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_lesson_apply_path(@lesson_apply), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              lesson_apply_path(@lesson_apply),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
